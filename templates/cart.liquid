  <section class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="content">
            <h1 class="page-name">Cart</h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cart</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>

    <section class="cart-area section">
    <div class="cart shopping">
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-2">
            <div class="block">
              <div class="product-list">
                <form method="post">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Item Name</th>
                        <th class="text-center">Quantity</th>
                        <th>Line Total</th>

                      </tr>
                    </thead>
                    <tbody>
                        {% for line_item in cart.items %}
                            <tr>
                                <td>
                                <div class="product-info">
                                    <img width="80" src="{{line_item.image | product_img_url: '1920x'}}" alt="">
                                    <a href="{{line_item.url}}">{{line_item.title}}</a>
                                </div>
                                </td>
                                <td class="text-center">
                                    <input style="width:75px;" type="number" name="updates[]" class="btn btn-default" value={{line_item.quantity}} min="0" pattern="[0-9]*"><br/>
                                    <a class="product-remove" href="/cart/change?line={{forloop.index}}&quantity=0" rel={{line_item.id}}>Remove</a>
                                </td>
                                <td>{{line_item.line_price | money}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                  </table>
                  <div class="row justify-content-end cart-total">
                    <div class="col-md-2">
                      Total
                    </div>
                    <div class="col-md-2">
                      {{cart.total_price | money}}
                    </div>
                  </div>
                  <input type="submit" name="checkout" class="btn btn-main pull-right" value="checkout">
                  <input type="submit" name="update" class="btn btn-transparent pull-right" id="update-btn" value="update">
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
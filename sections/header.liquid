  <section class="top-header">
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-xs-12 col-sm-3">
          <div class="contact-number">
            <i class="fa fa-phone"></i>
            <span>{{shop.phone}}</span>
          </div>
          <div class="contact-number">
            <i class="fa fa-envelope"></i>
            <span>{{shop.email}}</span>
          </div>
        </div>

        <div class="col-md-6 col-xs-12 col-sm-6">
          <!-- Site Logo -->
          <div class="logo text-center">
            <a href="index.html">
              <!-- replace logo here -->
              <svg width="205px" height="29px" viewBox="0 0 155 29" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" font-size="40" font-family="AustinBold, Austin" font-weight="bold">
                  <g id="Group" transform="translate(-108.000000, -297.000000)" fill="#000000">
                    <text id="fashion">
                      <tspan x="108.94" y="325">{{shop.name}}</tspan>
                    </text>
                  </g>
                </g>
              </svg>
            </a>
          </div>
        </div>
        <div class="col-md-3 col-xs-12 col-sm-3">
          <ul class="top-menu list-inline float-right">
              <li class="list-inline-item"><a href="/cart"><i class="fa fa-shopping-cart"></i>Cart</a></li>
            {% if shop.customer_accounts_enabled %}
              {% if customer %}
              <li class="list-inline-item"><a href="/account"><i class="fa fa-user"></i>My Account</a></li>
              <li class="list-inline-item"><a href="/account/login"><i class="fa fa-sign-out"></i>Sign Out</a></li>
              {% else %}
                <li class="list-inline-item"><a href="/account/login"><i class="fa fa-sign-in"></i>Login</a></li>
              {% endif %}
            {% endif %}

          </ul>
        </div>
      </div>
    </div>
  </section>

  {%include 'menu'%}

{% schema %}
    {
        "name": "Main Menu",
        "settings": [
            {
                "type": "link_list",
                "id": "main_linklist",
                "label": "menu",
                "default": "main-menu"
            }
        ]
    }
{% endschema %}